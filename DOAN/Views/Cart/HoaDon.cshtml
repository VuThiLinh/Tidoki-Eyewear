
@{
    ViewBag.Title = "HoaDon";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var list = Session["Cart"] as List<DOAN.Models.Item>;
    var dataKH = Session["UserLogin"] as DOAN.Models.tblNguoiDung;
    var nguoinhan = ViewBag.NguoiNhan as DOAN.Models.tblDonHang;
}
<div class="container-fluid border border-top-0 px-xl-5">

    <h3 class="text-center">CẢM ƠN QUÝ KHÁCH ĐÃ SỬ DỤNG DỊCH VỤ CỦA CHÚNG TÔI</h3>
    <h4 class="text-center">Thông tin mua hàng của quý khách</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 ">
            <h4 class="text-center">Thông tin người đặt hàng</h4>
            <div class="form-group">
                <span>Họ tên:</span>
                <span>@dataKH.TenNguoiDung</span>
            </div>
            <div class="form-group">
                <span>Địa chỉ:</span>
                <span>@dataKH.DiaChi</span>
            </div>
            <div class="form-group">
                <span>Số điện thoại:</span>
                <span>@dataKH.SDT</span>
            </div>
            <div class="form-group">
                <span>Ngày đặt hàng:</span>
                <span>
                    @nguoinhan.NgayDatHang
                </span>
            </div>
        </div>
        <div class="col-md-6">
            <h4 class="text-center">Thông tin người nhận hàng</h4>
            <div class="form-group">
                <span>Họ tên:</span>
                <span>
                    @nguoinhan.TenNguoiNhan
                </span>
            </div>
            <div class="form-group">
                <span>Địa chỉ:</span>
                <span>
                    @nguoinhan.DiaChiGiaoHang
                </span>
            </div>
            <div class="form-group">
                <span>Điện thoại:</span>
                <span>
                    @nguoinhan.SDT
                </span>
            </div>
            <div class="form-group">
                <span>Ngày đặt hàng:</span>
                <span>
                    @nguoinhan.NgayDatHang
                </span>
            </div>
        </div>
    </div>
    <hr />
    <h4 class="mt-3">CÁC SẢN PHẨM ĐẶT MUA</h4>
    <table class="table table-bordered">
        <tr>
            <th align="center">Hình ảnh</th>
            <th align="center">Tên sản phẩm</th>
            <th align="center">Đơn giá</th>
            <th align="center">Số lượng</th>
            <th align="center">Thành tiền</th>
        </tr>
        @{
            if (list != null)
            {
                foreach (var item in list)
                {
                    <tr>
                        <td align="center">
                            <img src="@item.Anh" width="120" />
                        </td>
                        <td>
                            @item.TenSP
                        </td>
                        <td align="right">
                            @item.Gia.ToString("#,##0")
                        </td>
                        <td align="center">
                            @item.SoLuong
                        </td>
                        <td align="right" class="ThanhTien">
                            @item.Total.ToString("#,##0")
                        </td>
                    </tr>
                }
            }
        }
        <tr>
            <td class="font-weight-bold" colspan="4" align="right">
                Tổng thanh toán:
            </td>
            <td class="TongTien font-weight-bold" style="text-align:right">
                @if (ViewBag.Total != null)
                {@ViewBag.Total.ToString("#,##0")}
            </td>
        </tr>
    </table>
    <div class="col-md-12 p-0" style="clear:both; text-align:right">
        <a href="~/Home/Index" class="btn btn-primary">Trang chủ</a>
    </div>
</div>
