@model IEnumerable<DOAN.Models.tblChiTietPhieuNhap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết phiếu nhập</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Mã phiếu nhập
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Gía nhập
        </th>
        <th>
            Ghi chú
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaPhieuNhap)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tblSanPham.TenSanPham)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GiaNhap)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tblPhieuNhap.GhiChu)
    </td>
    <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaPhieuNhap, idMaSP = item.MaSanPham }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaPhieuNhap, idMaSP = item.MaSanPham }) 
    </td>
</tr>
}

</table>
