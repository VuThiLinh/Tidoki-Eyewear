@model IEnumerable<DOAN.Models.tblChiTietPhieuNhap>
@{ 
       var matt = ViewBag.matt;
}

<table class="table table-hover table-bordered">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Gía nhập
        </th>
        <th>
            Ghi chú
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.tblSanPham.TenSanPham)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GiaNhap)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tblPhieuNhap.GhiChu)
    </td>
    <td>
        @if (matt != 10)
        {
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaPhieuNhap, idMaSP = item.MaSanPham })<span>|</span>
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaPhieuNhap, idMaSP = item.MaSanPham })<span>|</span>
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaPhieuNhap, idMaSP = item.MaSanPham })
        }
    </td>
</tr>
}

</table>
