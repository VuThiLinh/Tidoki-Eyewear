@model IEnumerable<DOAN.Models.tblChiTietDonHang>
@{
    var matt = ViewBag.matt;
}

<table class="table table-hover table-bordered">
    <tr>
        <th>
            Mã đơn hàng
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaDonHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tblSanPham.TenSanPham)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DonGia)
    </td>
    <td>
        @if (matt != 5 && matt != 6)
        {
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaDonHang, idMaSP = item.MaSanPham })<span>|</span>
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDonHang, idMaSP = item.MaSanPham })
        }
    </td>
</tr>
    }

</table>

