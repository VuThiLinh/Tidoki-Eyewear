
@model IEnumerable<DOAN.Models.tblChiTietDonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Areas/Admin/assets/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Areas/Admin/assets/js/lib/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<style>
    .datepicker > .datepicker-days {
        display: block;
    }

    ol.linenums {
        margin: 0 0 0 -8px;
    }
</style>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DANH SÁCH CHI TIẾT ĐƠN HÀNG</h6>
        </div>
        @*<a class="btn btn-primary ml-3 mt-2 mb-2 pl-2" href="@Url.Action("Create")" style="width: 6rem;">Thêm mới</a>*@
        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered dataTable text-dark" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaDonHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblSanPham.TenSanPham)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonGia)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaDonHang, idMaSP = item.MaSanPham }) |
                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDonHang, idMaSP = item.MaSanPham }) 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@section scripts{


    <script src="~/Areas/Admin/assets/js/lib/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Areas/Admin/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/vi.json'
                },
                "bFilter": false
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.startDate').datepicker({
                autoclose: true,
                format: 'dd/mm/yyyy',
            });
            $('.endDate').datepicker({
                autoclose: true,
                format: 'dd/mm/yyyy',
            });

        });
    </script>
}
