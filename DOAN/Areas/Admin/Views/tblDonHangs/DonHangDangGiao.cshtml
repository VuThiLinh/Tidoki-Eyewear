
@model IEnumerable<DOAN.Models.tblDonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Areas/Admin/assets/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Areas/Admin/assets/js/lib/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<style>
    .datepicker > .datepicker-days {
        display: block;
    }

    ol.linenums {
        margin: 0 0 0 -8px;
    }
</style>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DANH SÁCH ĐƠN HÀNG ĐANG GIAO</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered dataTable text-dark" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên người nhận</th>
                            <th>Địa chỉ giao hàng</th>
                            <th>Số điện thoại</th>
                            <th>Ngày đặt hàng</th>
                            <th>Tên khách hàng</th>
                            <th>Trạng thái đơn</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenNguoiNhan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChiGiaoHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayDatHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblNguoiDung.TenNguoiDung)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblTrangThai.TenTrangThai)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","tblDonHangs", new {id = item.MaDonHang })" class="p-0 btn data-toggle= text-primary">Sửa</a><span>|</span>
                                    <a href="@Url.Action("Details","tblDonHangs", new {id = item.MaDonHang })" class="p-0 btn data-toggle= text-primary">Chi tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@section scripts{


    <script src="~/Areas/Admin/assets/js/lib/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Areas/Admin/assets/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Areas/Admin/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/vi.json'
                },
                "bFilter": false
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.startDate').datepicker({
                autoclose: true,
                format: 'dd/mm/yyyy',
            });
            $('.endDate').datepicker({
                autoclose: true,
                format: 'dd/mm/yyyy',
            });

        });
    </script>
}
