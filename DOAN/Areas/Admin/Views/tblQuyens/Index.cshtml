
@model IEnumerable<DOAN.Models.tblQuyen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Areas/Admin/assets/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DANH SÁCH QUYỀN TRUY CẬP</h6>
        </div>
        <a class="btn btn-primary ml-4 mt-2 pl-2" href="@Url.Action("Create")" style="width: 6rem;">Thêm mới</a>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered dataTable text-dark" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã quyền</th>
                            <th>Tên quyền truy cập</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaQuyen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenQuyen)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","tblQuyens", new {id = item.MaQuyen })" class="p-1 data-toggle= text-primary">Sửa</a><span>|</span>
                                    <a href="@Url.Action("Details","tblQuyens", new {id = item.MaQuyen })" class="p-1 data-toggle= text-primary">Chi tiết</a>@*<span>|</span>
                                    <a href="@Url.Action("Delete","tblQuyens", new {id = item.MaQuyen })" class="p-1 data-toggle= text-primary">Xóa</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@section scripts{
    <script src="~/Areas/Admin/assets/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Areas/Admin/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/vi.json'
                },
            });
        });
    </script>
}
