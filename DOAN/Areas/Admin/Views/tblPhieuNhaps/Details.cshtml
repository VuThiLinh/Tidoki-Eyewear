@model DOAN.Models.tblPhieuNhap

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết phiếu nhập</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã phiếu nhập:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaPhieuNhap)
        </dd>

        <dt>
            Ngày nhập: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>

        <dt>
            Ghi chú:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

        <dt>
            Tên người tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblNguoiDung.TenNguoiDung)
        </dd>

        <dt>
            Tên nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblNhaCungCap.TenNCC)
        </dd>

        <dt>
            Trạng thái phiếu nhập:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblTrangThai.TenTrangThai)
        </dd>

    </dl>
</div>

@Html.Action("ChiTietPhieuNhap", "tblChiTietPhieuNhaps", new { id = Model.MaPhieuNhap, matt=Model.MaTrangThai })

<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaPhieuNhap }) |
    @Html.ActionLink("Danh sách", "Index")
</p>
